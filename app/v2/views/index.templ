package views


templ hello(name string) {
    <div class="flex">
        <h1 class="mx-auto">Hello, {name} !</h1>
    </div>
}

templ Page(name string) {
	<html>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Index</title>
			<link rel="stylesheet" href="/style.css"/>
		</head>
		<body class="bg-gray-100">
	        @hello(name)
		</body>
	</html>
}